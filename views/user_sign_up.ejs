<!-- linked css and scripts -->
<link rel="stylesheet" href="/css/user_sign_in.css">
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<div id="sign_in_box">
    <h1>Sign Up</h1>
    <div id="box">

      <!-- google authentiction link -->
      <a href="/users/auth/google">
        <div class="google-btn">
          <div class="google-icon-wrapper">
            <img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
          </div>
          <p class="btn-text"><b>Sign Up with Google</b></p>
        </div>
    </a>

    <br>
    <!-- form for sign up user -->
<form action="/users/create" method="POST" id="signInForm">
    <input type="text" name="name" placeholder="Enter Name" required><br>
    <br>
    <input type="email" name="email" placeholder="Enter email" required><br>
    <br>
    <input type="password" name="password" placeholder="Password" required><br>
    <br>
    <input type="password" name="confirm_pwd" placeholder="Confirm password" required><br>
    <br>
    <!-- captcha show -->
    <center><div class="g-recaptcha" data-sitekey="6LcclaoZAAAAAAE3ARpAav5t_DGTCWNILnnDd3R4"></div></center>
    <br>
    <input type="button" id="submitbtn" value="Sign Up">
    <br>
</form>
<br><br>
</div>
</div>
<!-- added script -->
<script src="/js/sign-in.js"></script>