<!-- linked css and js -->
<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />
<link rel="stylesheet" href="/css/user_sign_in.css">
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<div id="sign_in_box">
    <h1>Sign In</h1>
    <div id="box">
      <!-- link for google auth -->
      <a href="/users/auth/google">

        <div class="google-btn">
          <div class="google-icon-wrapper">
            <img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
          </div>
          <p class="btn-text"><b>Sign in with Google</b></p>
        </div>
    </a>
    <!-- form for sign in user -->
<form action="/users/create-session" method="POST" id="signInForm">
    <br>
    <input type="email" name="email" id="email" placeholder="Your email" required>
    <br>
    <br>
    <input type="password" name="password" id="password" placeholder="Password" required>
    <br>
    <br>
    <!-- captcha show -->
    <center><div class="g-recaptcha" data-sitekey="6LcclaoZAAAAAAE3ARpAav5t_DGTCWNILnnDd3R4"></div></center>
    
    <!-- link for forgot password -->
    <p>
      <a href="/users/forgot-password">Forgot password!</a>
    </p>
    <input type="button" id="submitbtn" value="Sign-In">
    <br><br>

</form>
    
</div>
</div>
<!-- added script -->
<script src="/js/sign-in.js"></script>