<!-- linked css -->
<link rel="stylesheet" href="/css/header.css">

    <header id="layout-header">
        <nav>
            <div class="mini-logo">
                <p>
                    <a href='/'>
                        gaggle
                    </a>
                </p>
            </div>
            
            <!-- show menu items based on user signed in or not -->
            <div class="auth-links">
                <ul>
                    <!-- if user signed in then showing profile page and signout -->
                    <% if (locals.user){ %>
                    <li>
                        <a href="/users/profile"><%= user.name %></a>
                    </li>
                    <li>
                        <a href="/users/sign-out">Sign Out</a>
                    </li>
                    <% }else{ %>
                        <!-- else showing signin and signup -->
                    <li>
                        <a href="/users/sign-in">Sign In</a>
                    </li>
                    <li>
                        <a href="/users/sign-up">Sign Up</a>
                    </li>
            
                    <% } %>
                </ul>
            </div>
        </nav>
    </header>